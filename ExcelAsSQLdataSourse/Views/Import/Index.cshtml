@model ExcelAsSQLdataSourse.Models.UploadFileVM

@{
    ViewBag.Title = "Index";
}

<h3>@ViewBag.Message</h3>

<h2>Import</h2>
<br />
<br />
@{
    string errorMessage = "",
        fileName = "",
        setName = "",
        userName = "";
    if (Model != null)
    {
        errorMessage = Model.ErrorMessage ?? "";
        fileName = Model.UploadFile == null ? "" : Model.UploadFile.FileName;
        setName = Model.SetName ?? "";
        userName = Model.UserName ?? "";
    }
}
<h3 class="danger">@errorMessage</h3>

<div class="row">
    <label class="col-sm-2 text-right">Prepare File for Import</label>
    <div class="col-sm-10">
        <a href="@Url.Action("GetExcelFileSample", "Import")" download>
            <input class="form-control" type="button" value="Download Sample" />
        </a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12 col-lg-6">
        <ul>
            <li>Modify the sample, add/delete rows, change the data, etc.</li>
            <li>You can even modify the cell data types or the column structure to see the resulting error messages!</li="list-group-item">
            <li>When you're ready, upload it below and we'll import it to the database.</li>
        </ul>
    </div>
</div>

<div style="height: 50px"></div>

<form action="/Import/UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-2 text-right">File to Upload</label>
            <div class="col-sm-10">
                <input name="UploadFile" type="file" class="form-control" accept=".xlsx" value="@fileName"/>
                @*Html.ValidationMessageFor(x => x.UploadFile, "", new { @class="danger" } )*@
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 text-right">My file has headers</label>
            <div class="col-sm-10">
                @Html.CheckBoxFor(x => x.HasHeaders)
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 text-right">Name This Data Set</label>
            <div class="col-sm-10">
                <input name="SetName" class="form-control" value="@setName" />
                @*Html.ValidationMessageFor(x => x.SetName, "", new { @class="danger" } )*@
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 text-right">Your Name</label>
            <div class="col-sm-10">
                <input name="UserName" class="form-control" value="@userName" />
                @*Html.ValidationMessageFor(x => x.UserName, "", new { @class="danger" } )*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="form-control" value="Import">
            </div>
        </div>
    </div>
</form>
