@model List<InsuranceQuoteDB.Models.QuoteSummaryVM>

@{
    ViewBag.Title = "Index";
}

<h2>Admin: All Quotes</h2>

@if (Model is null || Model.Count() == 0)
{
    <h2>Sorry, there are no records.</h2>
    <p>Did you remember to login as an admin?</p>
}

<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Details
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Model Year
            </th>
            <th>
                Option Package
            </th>
            <th>
                Coverage
            </th>
            <th>
                Date
            </th>
            <th class="text-right">
                Price&nbsp;
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" value="ID:@item.QuoteID" onclick="location='/Admin/Details/?QuoteID=@item.QuoteID'" />
                    </td>
                    <td>
                        @item.CustomerName
                    </td>
                    <td>
                        @item.Make
                    </td>
                    <td>
                        @item.Model
                    </td>
                    <td>
                        @item.ModelYear
                    </td>
                    <td>
                        @item.OptionPackage
                    </td>
                    <td>
                        @item.Coverage
                    </td>
                    <td>
                        @item.DateIssued.ToString("MM/dd/yyyy")
                    </td>
                    <td class="text-right">
                        @item.Price
                    </td>
                </tr>
            }
        }
    </tbody>
</table>